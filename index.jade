mixin image(source, text)
  img(alt=text src='/assets/' + source)

mixin css(source)
  link(rel='stylesheet' href=source)

mixin javascript(source)
  script(type="text/javascript" src=source)

doctype html
html(lang="en")
  head
    title Commuter Rails Departure Board
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    meta(name="description" content="MBTA Commuter Rail Exercise")
    +css('http://fonts.googleapis.com/css?family=OFL+Sorts+Mill+Goudy+TT:regular,italic')
    +css('skeleton.css')
    +javascript('dashboard.js')

    //////////////////////
    // Style
    //////////////////////
    style
      :stylus
        body
          background grey
          color white

        .board
          border-radius 5px
          border 1px solid red
          padding 2px

          .row
            &:heading
              text-transform uppercase
            &:last-child
              border none
            border-bottom 1px solid #fee

        #north .board
          background salmon
          border-color red

        #south .board
          background #59b
          border-color blue

        .debug
          background black

  //////////////////////
  // Content
  //////////////////////
  body(class='document')

    section#north
      h2 North Station

      .board
        .row.heading
          .two.columns
            span Time
          .five.columns
            span Destination
          .one.columns
            span Train#
          .one.columns
            span Track#
          .three.columns
            span Status

    section#south
      h2 South Station

      .board
        .row.heading
          .two.columns
            span Time
          .five.columns
            span Destination
          .one.columns
            span Train#
          .one.columns
            span Track#
          .three.columns
            span Status

    footer#bottom
      p Here is some bottom matter.
      .debug
        tt#response
